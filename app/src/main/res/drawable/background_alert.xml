<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo con degradado en tonos morados -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#A54CF8"
                 android:centerColor="#9A7CAF"
                     android:endColor="#D6A0FF"
            android:angle="45"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Capa superior con transparencia -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66FFFFFF"/> <!-- Blanco con transparencia -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

</layer-list>